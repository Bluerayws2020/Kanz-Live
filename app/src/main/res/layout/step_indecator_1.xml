<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/firstIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        app:cornerRadius="100dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:background="@drawable/step_indecator_selecated"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/usericon"
        android:padding="6dp"
        />

    <TextView
        android:id="@+id/firstOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_data"
        android:textColor="#51C777"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/firstIcon"
        app:layout_constraintStart_toStartOf="@+id/firstIcon"
        app:layout_constraintTop_toBottomOf="@+id/firstIcon" />

    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="#293056"
        app:layout_constraintStart_toEndOf="@id/firstIcon"
        app:layout_constraintEnd_toStartOf="@id/thirdIcon"
        app:layout_constraintTop_toTopOf="@id/firstIcon"
        app:layout_constraintBottom_toBottomOf="@id/firstIcon"/>


<!--    <TextView-->
<!--        android:id="@+id/secondOption"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
