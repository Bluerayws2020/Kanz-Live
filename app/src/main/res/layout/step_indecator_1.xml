<!--        app:layout_constraintTop_toTopOf="parent" />-->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thirdIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        app:cornerRadius="100dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:background="@drawable/registration_step_unselected"
        android:textColor="@color/baby_blue"
        app:layout_constraintStart_toEndOf="@id/firstOption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/hearticon"
        android:padding="6.5dp"

        />


    <TextView
        android:id="@+id/thirdOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="الاهتمامات"
        android:textColor="#293056"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/thirdIcon"
        app:layout_constraintStart_toStartOf="@+id/thirdIcon"
        app:layout_constraintTop_toBottomOf="@+id/thirdIcon" />
    <View
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="#293056"
        app:layout_constraintStart_toEndOf="@id/thirdIcon"
        app:layout_constraintEnd_toStartOf="@id/fourthOption"
        app:layout_constraintTop_toTopOf="@id/firstIcon"
        app:layout_constraintBottom_toBottomOf="@id/firstIcon"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fourthOption"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="60dp"
        app:cornerRadius="100dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:background="@drawable/registration_step_unselected"
        android:textColor="@color/baby_blue"
        app:layout_constraintStart_toEndOf="@id/thirdOption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/penicon"
        android:padding="7dp"
        />



    <TextView
        android:id="@+id/fourthOptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/registration"
        android:textColor="#293056"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fourthOption"
        app:layout_constraintStart_toStartOf="@+id/fourthOption"
        app:layout_constraintTop_toBottomOf="@+id/fourthOption" />


</androidx.constraintlayout.widget.ConstraintLayout>